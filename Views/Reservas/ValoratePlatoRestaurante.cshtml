@model IEnumerable<MiGuachincheWeb.Models.Plato>
@{
    ViewData["Title"] = "Valorar Platos";
}

<h3>Listado de platos del restaurante</h3>
<hr />
<article class="container">
    <table class="table table-striped table-hover table-secondary">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Nombre)</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Plato item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.tipo.nombre)
                    </td>
                    <td>
                        <button onclick="mostrar(@item.PlatoId)" class="btn btn-info" title="Valorar plato">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                                <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</article>
<div id="popup" class="popup row">
    <div class="popup-content col-3">
        <h5 class="text-center">Deja tu valoración</h5>
        <form asp-controller="reservas" asp-action="ValoratePlato">
            <input type="hidden" name="platoId" id="valor">
            <input type="hidden" name="restauranteId" value="@ViewBag.restaurante" />
            <div id="rating" class="d-flex justify-content-center rating">
                <input type="radio" id="star5" name="rating" value="5"><label for="star5"></label>
                <input type="radio" id="star4" name="rating" value="4"><label for="star4"></label>
                <input type="radio" id="star3" name="rating" value="3"><label for="star3"></label>
                <input type="radio" id="star2" name="rating" value="2"><label for="star2"></label>
                <input type="radio" id="star1" name="rating" value="1"><label for="star1"></label>
            </div>
            <div class="d-flex justify-content-evenly my-3">
                <button class="btn btn-primary" type="reset" onclick="cerrarFormulario()">Cerrar</button>
                <button class="btn btn-success" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>
    

