@model MiGuachincheWeb.Models.ReservaDTO

@{
    ViewData["Title"] = "Edit";
}
<h4>Editar Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="reservaId" />
            <input type="hidden" asp-for="restId" />
            <div class="form-group my-2">
                <label for="fecha" class="control-label">Fecha de la reserva</label>
                <input id="fecha" asp-for="fechaReserva" class="form-control" />
                <span asp-validation-for="fechaReserva" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label for="Comensales" class="control-label">Comensales</label>
                <input id="Comensales" asp-for="numeroComensales" class="form-control" />
                <span asp-validation-for="numeroComensales" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary"  asp-controller="User" asp-action="Reserva">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
