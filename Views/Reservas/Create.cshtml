@model MiGuachincheWeb.Models.ReservaDTO

@{
    ViewData["Title"] = "Create";
}

<h4>Hacer una Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label for="restaurante" class="control-label">Restaurante</label>
                <input id="restaurante" asp-for="nombreRestaurante" class="form-control" readonly />
                <input type="hidden" asp-for="restId" />
                <span asp-validation-for="nombreRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label for="nombreUsuario" class="control-label">Nombre:</label>
                <input id="nombreUsuario" asp-for="nombreUsuario" class="form-control" readonly />
                <input  type="hidden" asp-for="userId"/>
                <span asp-validation-for="nombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label for="cantidad" class="control-label">Número de comensales</label>
                <input id="cantidad" asp-for="numeroComensales" class="form-control" />
                <span asp-validation-for="numeroComensales" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label for="fecha" class="control-label">Elige la fecha de la reserva</label>
                <input id="fecha" asp-for="fechaReserva" class="form-control" />
                <span asp-validation-for="fechaReserva" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Confirmar" class="btn btn-outline-success me-5" />
                <a class="btn btn-primary" asp-controller="restaurantes" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
