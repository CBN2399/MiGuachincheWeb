@model MiGuachincheWeb.Models.Plato

@{
    ViewData["Title"] = "Details";
}


<div>
    <h3>Detalles del plato</h3>
    <hr />
    <div class="row">
        <div class="col-12 col-xl-5 mb-5">
            <!--Aqui va la foto del restaurante-->
            <img src='~/img/platos/@Html.DisplayFor(model => model.ImagenURL)' title="Imagen del plato" alt="@Html.DisplayFor(model => model.Descripcion)" width="400" height="300" />
        </div>
        <div class="col-12 col-xl-7">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.tipo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.tipo.nombre)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row my-3">
        <h6 class="fw-bold">Restaurantes donde se sirve</h6>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>zona</th>
                        <th>Especialidad</th>
                        <th>Valoracion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Restaurante restaurante in Model.restaurantes)
                    {
                        <tr>
                            <td>
                                @restaurante.Nombre
                            </td>
                            <td>
                                @restaurante.zona.nombre
                            </td>
                            <td>
                                @restaurante.Id_tipoNavigation.nombre
                            </td>
                            <td>
                                @{
                                    int i = 1;
                                    while (i <= restaurante.valoracion)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill text-warning" viewBox="0 0 16 16">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                        </svg>
                                        i++;
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>
