@model MiGuachincheWeb.Models.Plato

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-12 col-md-8">
        <h1 class="text-center">Editar Plato</h1>
        <h4>Plato</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlatoId" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label mt-3 fw-bold"></label>
                <input asp-for="Nombre" class="form-control mt-3" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label mt-3 fw-bold"></label>
                <input asp-for="Descripcion" class="form-control mt-3" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoId" class="control-label mt-3 fw-bold">Plato</label>
                <select asp-for="tipoId" class="form-control mt-3" asp-items="ViewBag.tipoId"></select>
                <span asp-validation-for="tipoId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary me-5" />
                <a class="btn btn-info" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
