@using Microsoft.AspNetCore.Identity

@model List<CustomUserDTO>
@inject UserManager<CustomUser> _MiManager

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center fw-bold">Listado de Usuarios</h1>

<h3 class="my-3">Clientes</h3>

<div class="table-responsive p-5">
    <table class="table table-striped table-secondary table-hover fondo_tablas">
        <thead>
            <tr class="fs-3 fw-bold text-center">
                <th>
                    @Html.DisplayNameFor(model => model[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Email)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CustomUserDTO user in Model)
            {
                if (user.Role == "Default")
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => user.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" title="Borrar Usuario">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
        
            }
        </tbody>
    </table>
</div>

<h3 class="my-3">Propietarios</h3>
<div class="table-responsive p-5">
    <table class="table table-striped table-secondary table-hover fondo_tablas">
        <thead>
            <tr class="fs-3 fw-bold text-center">
                <th>
                    @Html.DisplayNameFor(model => model[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Email)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CustomUserDTO user in Model)
            {
                if (user.Role == "Manager")
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => user.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td class="d-flex flex-column flex-md-row justify-content-center gap-3">
                            <a asp-controller="restaurantes" asp-action="Create" asp-route-id="@user.Id" class="btn btn-primary" title="Añadir restaurante">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                </svg>
                            </a>

                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" title="Borrar Usuario">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>
