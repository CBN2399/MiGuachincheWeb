@model MiGuachincheWeb.Models.Zona

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalles de la zona</h4>
    <hr />
    <div class="row">
        <div class="col-sm-5"> 
            <img src="~/img/platos/calamares.jpg" width="450" height="300" alt="Paisaje de la zona" />
        </div>
        <div class="col-sm-7">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row my-3">
        <table class="table table-striped table-hover col-md-10"> 
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.restaurantes.ToList()[0].Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.restaurantes.ToList()[0].telefono)
                    </th>
                    <th>
                        Especialidad
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.restaurantes.ToList()[0].valoracion)
                    </th>
                    <th>
                        Acciones
                    </th>
                 </tr>
            </thead>
            <tbody>
                @foreach (Restaurante rest in Model.restaurantes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => rest.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => rest.telefono)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => rest.Id_tipoNavigation.nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => rest.valoracion)
                        </td>

                        <td>
                            <a asp-controller="restaurantes" asp-action="Details" asp-route-id="@rest.RestauranteId" class="btn btn-outline-success" title="Ver detalles del restaurante">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                </svg>
                            </a>
                            <a asp-controller="User" asp-action="AddRestaurante" asp-route-id="@rest.RestauranteId" class="btn btn-outline-warning" title="Añadir restaurante a favoritos">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Volver</a>
</div>
