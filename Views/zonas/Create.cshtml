@model MiGuachincheWeb.Models.Zona

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-12 col-md-8">
        <h1 class="text-center">Crear Zonas</h1>
        <h4>Zona</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label mt-3 fw-bold text-capitalize"></label>
                <input asp-for="nombre" class="form-control mt-3" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label mt-3 fw-bold text-capitalize"></label>
                <input asp-for="descripcion" class="form-control mt-3" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary me-5" />
                <a class="btn btn-info" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
