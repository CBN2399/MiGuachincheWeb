@model MiGuachincheWeb.Models.Restaurante

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fs-bold text-primary text-center mb-5">Borrar Restaurantes</h1>

<h3>¿Estás seguro de borrar este restaurante?</h3>

<h4>Restaurante</h4>
<hr />
<div>
    <div class="row">
        <div class="col-12 col-md-7 mb-5">
            <!--Aqui va la foto del restaurante-->
            <img src='~/img/restaurantes/@Html.DisplayFor(model => model.Rest_Url)' title="Imagen del restaurante" alt="@Html.DisplayFor(model => model.Descripcion)" width="400" height="300" />
        </div>
        <div class="col-12 col-md-5">
            <dl class="row">
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3 text-capitalize">
                    @Html.DisplayNameFor(model => model.telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.telefono)
                </dd>
                <dt class="col-sm-3 text-capitalize">
                    @Html.DisplayNameFor(model => model.valoracion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.valoracion)
                </dd>
                <dt class = "col-sm-3">
                    Especialidad
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Id_tipoNavigation.nombre)
                </dd>
                <dt class="col-sm-3 text-capitalize">
                    @Html.DisplayNameFor(model => model.zona)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.zona.nombre)
                </dd>
            </dl>
    <h4>restaurante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rest_Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rest_Url)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valoracion)
        </dt>
        <dd class = "col-sm-10">
            @{
                int i = 1;
                while (i <= Model.valoracion)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill text-warning" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                    </svg>
                    i++;
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_tipoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_tipoNavigation.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.zona)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.zona.nombre)
        </dd>
    </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RestauranteId" />
                <input type="submit" value="Borrar" class="btn btn-danger me-3" /> 
                <a class="btn btn-primary" asp-action="Index">Volver</a>
            </form>
        </div>
    </div>
</div>
